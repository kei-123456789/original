<div class="form-wrapper">
  <h1>新しいデータ</h1>

    <%= form_with model: @content, id: 'new_content', local: true do |f| %>

    <%= render 'layouts/error_messages', model: f.object %>

    <div class="form-item">
      <%= f.label :visit %><br />
      <%= f.date_field :visit %>
    </div>
    <div class="form-item">
      <%= f.label :prefecture_id %><br />
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {id:"content-prefecture"}) %>
    </div>
    <div class="form-item">
      <%= f.label :explain %><br />
      <%= f.text_area :explain %>
    </div>
    <div class="form-item">
      <%= f.label :image %><br />
      <%= f.file_field :images, id:"content-images" , multiple: true%>
    </div>
    <div class="button-panel">
      <%= f.submit "保存" ,class:'button' %>
    </div>
    <% end %>
  <div class="form-footer">
  </div>
</div>