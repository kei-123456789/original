<section class="wrapper">
    <% if @contents.count == 0 %>
        <div class="nopost"><%= "投稿がありません！" %></div>
    <%  else %>
    <div class="container">
    <% @contents.each do |content| %>
        <div class="content">
            <div class="content-item">
                <%= image_tag content.image.variant(resize: '500x500') %>
            </div>    
            <div class="content-item">
                <div class="text">
                    <h2 class="heading"><%= content.visit  %></h2>
                    <p><%= content.explain %></p>
                </div>
            </div>
        </div>
    <% end %>
    <% end %>
    </div>
</section>